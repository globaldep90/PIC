;************** AULA 01 - PROGRAMA PARA PISCAR LED *****************
LIST   P=PIC16F628A
RADIX DEC	
#INCLUDE <P16F628A.INC>
	__CONFIG H'3F10'

	CBLOCK	0x20	;ENDEREÇO INICIAL DA MEMÓRIA DE
					;USUÁRIO
	CONTADOR1
	CONTADOR2
	CONTADOR3

	ENDC			;FIM DO BLOCO DE MEMÓRIA		
	
	ORG	0x00		;ENDEREÇO INICIAL DE PROCESSAMENTO
	GOTO	INICIO
		
INICIO
	CLRF	PORTA		;LIMPA O PORTA
	CLRF	PORTB		;LIMPA O PORTB
	BSF STATUS, RP0
	CLRF TRISB
	BCF STATUS, RP0

REPETE
	BSF PORTB, 1
	CALL ATRASO
	BCF PORTB, 1
	CALL ATRASO
	GOTO REPETE

ATRASO			
	;SETAR CONTADORES	
	MOVLW	70
	MOVWF	CONTADOR1
	MOVLW	170
	MOVWF	CONTADOR2
	MOVLW   100
	MOVWF	CONTADOR3

;1 LOOP = 774 USECS com 255
ATRASO1				
	DECFSZ	CONTADOR1	
	GOTO ATRASO2
	RETURN
ATRASO2
	DECFSZ CONTADOR2
	GOTO ATRASO3
	GOTO ATRASO1
ATRASO3
	DECFSZ CONTADOR3
	GOTO ATRASO3
	GOTO ATRASO2	
END